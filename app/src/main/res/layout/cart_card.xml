<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/name_item">
 <LinearLayout
     android:layout_width="235dp"
     android:layout_height="wrap_content"
     android:layout_margin="10dp"
     android:padding="10dp"
     android:id="@+id/liner"
     android:orientation="vertical"
     >
     <TextView
         android:id="@+id/card_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="0dp"
         android:fontFamily="@font/comfortaa_bold"

         android:text="Pizza"
         android:textColor="#000000"
         android:textSize="30sp"
         android:layout_marginLeft="30dp"
         android:textStyle="bold" />


     <TextView
         android:id="@+id/card_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/name_item"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="49dp"
         android:fontFamily="monospace"

         android:text="Rs 100"
         android:textColor="#A0A0A1"
         android:textSize="16sp"
         android:textStyle="bold"
         />



 </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/liner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quant_back"
            android:layout_marginTop="50dp"
            android:text="1"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="#FF8D2B"
            android:id="@+id/card_quant"/>


    </RelativeLayout>

</RelativeLayout>